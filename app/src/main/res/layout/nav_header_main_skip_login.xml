<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!--<ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="65dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/chewinlogo" />
-->

    <TextView
        android:id="@+id/ChewInSkipLogin"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="ChewIn"
        android:paddingLeft="25dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="#000000"
        android:layout_gravity="right"
        />

    <TextView
        android:id="@+id/ChewInSloganSkipLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life's short, eat right! ChewIn!"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="#000000"
        android:layout_gravity="right"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picSkipLogin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/chewinlogo"
        />
    <TextView
        android:id="@+id/userNameSkipLogin"
        android:layout_width="272dp"
        android:layout_height="20dp"
        android:text="...Your food on the menu"

        />
</LinearLayout>
