<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="47dp"
        android:text="Help Us, to know you!!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edittext223"
        android:layout_width="154dp"
        android:layout_height="54dp"
        android:layout_x="64dp"
        android:layout_y="131dp"
        android:text="DD/MM/YYYY"
        android:textSize="40px"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:textStyle="italic"
        android:fontFamily="cursive"
        android:textColor="#000000"
        />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:contentDescription="Select Date"
        android:cropToPadding="true"
        android:src="@drawable/calendar_icon"
        android:layout_x="224dp"
        android:layout_y="111dp" />

    <CheckBox
        android:id="@+id/indian"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="282dp"
        android:text="Indian"
        android:textColor="#120489"
         />

    <CheckBox
        android:id="@+id/irish"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="111dp"
        android:text="Irish"
        android:layout_y="282dp"
        android:textColor="#120489"
     />

    <CheckBox
        android:id="@+id/maxican"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="228dp"
        android:layout_y="282dp"
        android:text="Mexican"
        android:textColor="#120489"
         />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="297dp"
        android:layout_height="68dp"
        android:layout_x="36dp"
        android:layout_y="202dp"
        android:gravity="center"
        android:text="Select Cuisines of your Preference"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="right"
        android:textSize="28dp"
       />

    <CheckBox
        android:id="@+id/italian"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="325dp"
        android:text="Italian "
        android:textColor="#120489"
        />

    <CheckBox
        android:id="@+id/American"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="105dp"
        android:layout_y="325dp"
        android:text="american"
        android:textColor="#120489"
         />

    <CheckBox
        android:id="@+id/Spanish"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="228dp"
        android:layout_y="325dp"
        android:text="Spanish"
        android:textColor="#120489"
       />



    <RadioGroup
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_x="150dp"
        android:layout_y="370dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="548dp"
        android:weightSum="1"
        android:id="@+id/radioGroup"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3">

    <RadioButton
        android:id="@+id/veg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="402dp"
        android:text="Veg"
        android:textColor="#120489"
        android:checked="false" />

    <RadioButton
        android:id="@+id/nveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="143dp"
        android:layout_y="406dp"
        android:text="Non Veg"
        android:textColor="#120489"
  />
    </RadioGroup>
    <Button
        android:id="@+id/submitreg"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_x="111dp"
        android:layout_y="463dp"
        android:text="Submit" />

</AbsoluteLayout>